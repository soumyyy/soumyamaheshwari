{# /blog/_includes/base.njk #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | Soumya Maheshwari</title>
    <link rel="stylesheet" href="/blog/css/index.css">
    <link rel="stylesheet" href="/blog/css/App.css">
    <style>
        /* Add some basic styling for the blog content area */
        .blog-main {
            padding: 120px 20px 40px;
            max-width: 800px;
            margin: 0 auto;
        }
        .blog-main h1, .blog-main h2, .blog-main h3 {
            color: #fff;
        }
        .blog-main p, .blog-main li {
            color: #ccc;
            line-height: 1.6;
        }
        .blog-main a {
            color: #00aaff;
            text-decoration: none;
        }
        .blog-main a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="App">
        <div class="scroll-progress-bar"></div>
        <header class="header visible">
            <h1 class="brand-name">
                <a href="/" style="text-decoration: none; color: inherit;">soumya maheshwari</a>
            </h1>
        </header>

        <main class="blog-main">
            {{ content | safe }}
        </main>
    </div>
    <script src="/blog/js/main.js"></script>
</body>
</html>