{% extends "base.njk" %}

{% block content %}
  <!-- Debug: Available variables -->
  <!-- {{ page | dump | safe }} -->

  <div class="blog-header">
    <a href="/blog" class="back-to-blog">← Back to Blog</a>
  </div>
  
  <article class="blog-post">
    <header class="post-header">
      <div class="post-meta">
        <time datetime="{{ date | w3DateFilter }}" class="post-date">
          {{ date | readableDate }}
        </time>
        <span class="divider">•</span>
        <span class="reading-time">{{ content | readingTime }} min read</span>
      </div>
      <h1 class="post-title">{{ title }}</h1>
      {% if description %}
        <p class="post-subtitle">{{ description }}</p>
      {% endif %}
      <div class="post-divider"></div>
    </header>

    <div class="post-content">
      {{ content | safe }}
    </div>
  </article>

  <style>
    .blog-header {
      max-width: 800px;
      margin: 0 auto 2rem;
      padding: 0 20px;
    }

    .back-to-blog {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.9rem;
      color: rgba(255, 255, 255, 0.7);
      text-decoration: none;
      margin-bottom: 1.5rem;
      transition: color 0.2s ease;
      padding: 0.5rem 0;
    }

    .back-to-blog:hover {
      color: #00aaff;
    }

    .blog-post {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 20px;
      color: rgba(255, 255, 255, 0.9);
    }

    .post-header {
      margin-bottom: 3rem;
    }

    .post-meta {
      font-family: 'JetBrains Mono', monospace;
      font-size: 0.9rem;
      color: rgba(255, 255, 255, 0.6);
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .divider {
      color: rgba(255, 255, 255, 0.3);
    }

    .post-title {
      font-family: 'EB Garamond', serif;
      font-size: 2.5rem;
      font-weight: 500;
      margin: 0 0 1.5rem 0;
      line-height: 1.2;
      color: white;
    }

    .post-subtitle {
      font-size: 1.25rem;
      line-height: 1.6;
      color: rgba(255, 255, 255, 0.8);
      margin: 0 0 2rem 0;
      font-weight: 400;
    }

    .post-divider {
      height: 1px;
      background: rgba(255, 255, 255, 0.1);
      margin: 2rem 0;
    }

    .post-content {
      font-size: 1.1rem;
      line-height: 1.8;
    }

    .post-content p {
      margin-bottom: 1.5rem;
    }

    @media (max-width: 768px) {
      .post-title {
        font-size: 2rem;
      }
      
      .post-subtitle {
        font-size: 1.1rem;
      }
      
      .post-meta {
        font-size: 0.85rem;
      }
      
      .post-content {
        font-size: 1rem;
        line-height: 1.7;
      }
    }
  </style>
{% endblock %}